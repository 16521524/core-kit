{
  "name": "core-kit-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "tooling/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "dev": "yarn workspaces foreach -p run dev",
    "lint": "yarn workspaces foreach run lint",
    "release": "changeset",
    "version-packages": "changeset version && yarn install && yarn build",
    "publish-packages": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2",
    "typescript": "^5",
    "tsup": "^8",
    "eslint": "^9"
  }
}
