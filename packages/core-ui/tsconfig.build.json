{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES6",                     
    "module": "ESNext",
    "moduleResolution": "node",             
    "outDir": "dist",
    "declaration": true,                    
    "emitDeclarationOnly": false,           
    "noEmit": false,
    "jsx": "react-jsx",                     
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"],                        
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}